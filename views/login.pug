extends layout

block content
  .card
    .card-body.p-5
      .text-center.mb-4
        i.fas.fa-sign-in-alt.fa-3x.text-primary.mb-3
        h2.h4.mb-0 Connexion
        p.text-muted Connectez-vous Ã  votre compte

      form(action="/login", method="POST")
        .mb-3
          label.form-label(for="email")
            i.fas.fa-envelope.me-1
            | Adresse email
          input.form-control(
            type="email", 
            id="email", 
            name="email", 
            value=formData.email || "",
            required
          )
        
        .mb-4
          label.form-label(for="password")
            i.fas.fa-lock.me-1
            | Mot de passe
          input.form-control(
            type="password", 
            id="password", 
            name="password", 
            required
          )
        
        .d-grid
          button.btn.btn-primary.btn-lg(type="submit")
            i.fas.fa-sign-in-alt.me-2
            | Se connecter
        
        .text-center.mt-4
          p.mb-0
            | Pas encore de compte ? 
            a.text-decoration-none(href="/register") S'inscrire
